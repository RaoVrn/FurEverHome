# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/fureverhome

# JWT Secret Key (use a strong, random string in production)
JWT_SECRET=your_super_secret_jwt_key_here

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development

# File Upload Settings
MAX_FILE_SIZE=10MB
UPLOAD_DIR=uploads

# Seed Database (set to 'true' to populate with sample data on startup)
SEED_DATABASE=false
